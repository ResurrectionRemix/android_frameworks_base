<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/number"
            android:animateLayoutChanges="true"
            android:layout_width="@dimen/halo_number_size"
            android:layout_height="@dimen/halo_number_size"
            android:gravity="center"
            android:background="@drawable/halo_number_shape"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="@dimen/halo_number_text_size"/>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/halo_number_icon_size"
            android:layout_height="@dimen/halo_number_icon_size"                
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:alpha="0"/>

    </RelativeLayout>

</LinearLayout>
